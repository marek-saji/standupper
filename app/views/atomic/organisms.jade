include molecules

h2 Organisms

mixin PageHeader(app_name, user)
  header.organism_PageHeader
    h1
      +SvgImage('logo', '')
      a(href="/")= app_name
    if user
      div.user
        +User(user)
        |  
        a(href='/deauth').i18n de-auth

section.atomic
  h1 +PageHeader
  +PageHeader('Application', {
    _id:          '000000000000000000000000',
    displayName:  'Red Robot',
    ids:          [{provider: 'provider', id: 0}],
    avatarUrl:    'http://robohash.org/1'
  })

