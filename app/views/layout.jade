- var appName = config ? config.app.name : ''
doctype 5
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width')
    block title
      title
        if title
          =title
          |  â˜† 
        = appName
    block css
      link(rel='stylesheet', href='/css/style.css')
    if config && config.server.livereload
      script(src='//' + config.server.host + ':' + config.server.livereload.port + '/livereload.js')
  body
    +PageHeader(appName, user)
    div#content
      block content
    +PageFooter()
    block js
      if useSockets
        script(src='/socket.io/socket.io.js')
      script(src='/js/script.js')
